{
  "name": "claude-statusline-marketplace",
  "version": "0.5.0",
  "description": "Claude Code Statusline Plugin Marketplace",
  "type": "module",
  "license": "MIT",
  "author": "Yanis <yanis@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pamacea/claude-statusline.git"
  },
  "scripts": {
    "build": "bun build plugins/statusline/hooks/*.ts --outdir plugins/statusline/dist --target bun && chmod +x plugins/statusline/dist/*.js 2>/dev/null || true",
    "dev": "bun --watch plugins/statusline/hooks/*.ts",
    "test": "bun test plugins/statusline/test",
    "lint": "bunx eslint plugins/statusline/src/**/*.ts plugins/statusline/hooks/**/*.ts",
    "lint:fix": "bunx eslint plugins/statusline/src/**/*.ts plugins/statusline/hooks/**/*.ts --fix",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "install:statusline": "node plugins/statusline/scripts/install-statusline.mjs",
    "test:statusline": "node plugins/statusline/scripts/statusline.mjs"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun-types": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
