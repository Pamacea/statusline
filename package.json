{
  "name": "statusline",
  "version": "0.7.1",
  "description": "Claude Code Statusline Plugin - Enhanced with git status, cost tracking, and cross-platform support",
  "type": "module",
  "license": "MIT",
  "author": "Yanis <yanis@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pamacea/statusline.git"
  },
  "scripts": {
    "build": "tsc --project plugins/statusline/tsconfig.json && node scripts/build.mjs",
    "build:statusline": "tsc --project plugins/statusline/tsconfig.json",
    "dev": "tsc --watch --project plugins/statusline/tsconfig.json",
    "test": "bun test plugins/statusline/test",
    "lint": "eslint plugins/statusline/src/**/*.ts",
    "lint:fix": "eslint plugins/statusline/src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --project plugins/statusline/tsconfig.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install:statusline": "node plugins/statusline/scripts/install-statusline.mjs",
    "test:statusline": "node plugins/statusline/dist/index.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun-types": "^1.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "exports": {
    "./statusline": "./dist/index.js"
  }
}
